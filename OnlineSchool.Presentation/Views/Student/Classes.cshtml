@model List<UserClass>

<main id="main" class="main">
	<div class="pagetitle">
		<h1>My Classes</h1>
	</div><!-- End Page Title -->
	<div class="row">
		@foreach (var item in Model)
		{
			<div style="width: 22rem;" class="mt-3">
				<div class="card border-left-primary shadow-lg h-100 py-1">
					<img class="card-img-top" src="https://st.depositphotos.com/1741875/1237/i/450/depositphotos_12376816-stock-photo-stack-of-old-books.jpg" alt="Card image cap">
					<div class="card-body">
						<div class=" font-weight-bold text-primary text-uppercase mb-1">@item.Class.Name</div>
						<p class="card-text">Some quick example text to build on the card title.</p>
						<div class="text-center">
							<a asp-action="ClassSubjects" asp-controller="Student" asp-route-classId="@item.ClassId" class="btn btn-outline-primary">Войти</a>

						</div>
					</div>
				</div>
			</div>
		}
	</div>
</main><!-- End #main -->