@model AttendanceAndGradesModel

<main id="main" class="main">
    <!-- Begin Page Content -->
    <div class="container">
        <!-- Page Heading -->
        <div class="fs-4">@Model.Subject.Title - @Model.Subject.Class.Name - @Model.Date.ToString("D") </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Student</th>
                    <th scope="col">Attendence</th>
                    <th scope="col">Mark</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Students)
                {
                    <tr>
                        <th scope="row">@item.User.LastName @item.User.FirstName</th>
                        <td>
                            <div class="form-check form-switch fs-5">
                                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
                            </div>
                        </td>
                        <td>
                            <input min="1" max="10" type="number" class="w-50" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</main>
